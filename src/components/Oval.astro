---
const { id } = Astro.props;
const divId = `oval-${id}`;
const pathId = `path-${id}`;
---

<span>
  <svg viewBox="0 0 100 100" width="0" height="0">
    <clipPath id={pathId} clipPathUnits="objectBoundingBox">
      <path class="oval-path" transform="scale(.01)" />
    </clipPath>
  </svg>
  <div class="oval" id={divId} style=`clip-path: url(#${pathId});`></div>
</span>
